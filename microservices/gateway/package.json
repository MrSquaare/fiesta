{
  "private": true,
  "name": "@microservices/gateway",
  "version": "0.0.1",
  "scripts": {
    "wait:services": "wait-on tcp:3001 tcp:3002 tcp:3003 tcp:3004 tcp:3005 tcp:3006",
    "dev": "pnpm run wait:services && nest start --watch --preserveWatchOutput",
    "dev:debug": "pnpm run wait:services && nest start --debug --watch --preserveWatchOutput",
    "prebuild": "rimraf dist/",
    "build": "nest build",
    "start": "node dist/main.js",
    "lint": "eslint {src,apps,libs,test}/**/*.ts",
    "format": "eslint {src,apps,libs,test}/**/*.ts --fix",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rimraf dist/ .turbo/",
    "fclean": "pnpm run clean && rimraf node_modules/ .turbo/"
  },
  "dependencies": {
    "@apollo/gateway": "^2.6.3",
    "@apollo/server": "^4.10.0",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/graphql": "^12.0.11",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@common/types": "workspace:*",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "^20.11.2",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  }
}
