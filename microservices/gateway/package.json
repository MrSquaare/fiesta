{
  "private": true,
  "name": "@microservices/gateway",
  "version": "0.0.1",
  "scripts": {
    "wait:services": "wait-on tcp:3001 tcp:3002 tcp:3003 tcp:3004 tcp:3005 tcp:3006",
    "dev": "pnpm run wait:services && nest start --watch --preserveWatchOutput",
    "dev:debug": "pnpm run wait:services && nest start --debug --watch --preserveWatchOutput",
    "prebuild": "rimraf dist/",
    "build": "nest build",
    "start": "node dist/main.js",
    "lint": "eslint {src,apps,libs,test}/**/*.ts",
    "format": "eslint {src,apps,libs,test}/**/*.ts --fix",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rimraf dist/ .turbo/",
    "fclean": "pnpm run clean && rimraf node_modules/ .turbo/"
  },
  "dependencies": {
    "@apollo/gateway": "^2.4.9",
    "@apollo/server": "^4.7.5",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/graphql": "^12.0.7",
    "dotenv": "^16.3.1",
    "graphql": "^16.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@common/types": "workspace:*",
    "@nestjs/cli": "^10.1.7",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "^20.4.1",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  }
}
