{
  "private": true,
  "name": "fiesta",
  "version": "0.0.0",
  "description": "Time to fiesta!",
  "workspaces": [
    "mobile-app",
    "microservices/*",
    "common/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "docker:up": "docker compose -f ./docker/docker-compose.yml up",
    "docker:down": "docker compose -f ./docker/docker-compose.yml down",
    "dev:mobile": "turbo run dev --filter=mobile-app",
    "dev:android": "turbo run dev:android --filter=mobile-app",
    "dev:ios": "turbo run dev:ios --filter=mobile-app",
    "dev:microservices": "turbo run dev --parallel --filter=@microservices/*",
    "dev:common": "turbo run dev --parallel --filter=@common/*",
    "dev": "turbo run dev --parallel",
    "build:android": "turbo run build:android --filter=mobile-app",
    "build:ios": "turbo run build:ios --filter=mobile-app",
    "build:microservices": "turbo run build --filter=@microservices/*",
    "build:common": "turbo run build --filter=@common/*",
    "build": "turbo run build",
    "build:copy": "node scripts/copy-builds.js",
    "start:microservices": "turbo run start --filter=@microservices/*",
    "start": "turbo run start",
    "lint:mobile": "turbo run lint --filter=mobile-app",
    "lint:microservices": "turbo run --parallel lint --filter=@microservices/*",
    "lint:common": "turbo run lint --parallel --filter=@common/*",
    "lint": "turbo run lint --parallel",
    "format:mobile": "turbo run format --filter=mobile-app",
    "format:microservices": "turbo run format --parallel --filter=@microservices/*",
    "format:common": "turbo run format --parallel --filter=@common/*",
    "format": "turbo run format --parallel",
    "test:mobile": "turbo run test --filter=mobile-app",
    "test:microservices": "turbo run test --parallel --filter=@microservices/*",
    "test:common": "turbo run test --parallel --filter=@common/*",
    "test": "turbo run test --parallel",
    "clean:mobile": "turbo run clean --filter=mobile-app",
    "clean:microservices": "turbo run clean --parallel --filter=@microservices/*",
    "clean:common": "turbo run clean --parallel --filter=@common/*",
    "clean": "turbo run clean --parallel && rimraf **/*/.turbo node_modules/.cache/",
    "fclean:mobile": "turbo run fclean --filter=mobile-app",
    "fclean:microservices": "turbo run fclean --parallel --filter=@microservices/*",
    "fclean:common": "turbo run fclean --parallel --filter=@common/*",
    "fclean": "turbo run fclean --parallel && rimraf **/*/.turbo node_modules/",
    "dbclean": "rimraf **/*/*.db* **/*/*.sqlite*",
    "check-updates": "npm-check-updates -ws --root",
    "do-upgrades": "npm-check-updates -ws --root -u"
  },
  "author": "The Fiesta Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.3.2",
    "jest": "^29.7.0",
    "micromatch": "^4.0.5",
    "npm-check-updates": "^16.14.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "yargs": "^17.7.2"
  }
}
