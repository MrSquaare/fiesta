{
  "private": true,
  "name": "fiesta",
  "version": "0.0.0",
  "description": "Time to fiesta!",
  "workspaces": [
    "mobile-app",
    "microservices/*",
    "common/*"
  ],
  "scripts": {
    "dev:android": "turbo run dev:android --filter=mobile-app",
    "dev:ios": "turbo run dev:ios --filter=mobile-app",
    "dev:microservices": "turbo run dev --filter=@microservices/*",
    "dev:common": "turbo run dev --filter=@common/*",
    "dev": "turbo run dev --parallel",
    "build:android": "turbo run build:android --filter=mobile-app",
    "build:ios": "turbo run build:ios --filter=mobile-app",
    "build:microservices": "turbo run build --filter=@microservices/*",
    "build:common": "turbo run build --filter=@common/*",
    "build": "turbo run build",
    "build:copy": "node scripts/copy-builds.js",
    "start:microservices": "turbo run start --filter=@microservices/*",
    "start": "turbo run start",
    "lint:mobile": "turbo run lint --filter=mobile-app",
    "lint:microservices": "turbo run lint --filter=@microservices/*",
    "lint:common": "turbo run lint --filter=@common/*",
    "lint": "turbo run lint",
    "format:mobile": "turbo run format --filter=mobile-app",
    "format:microservices": "turbo run format --filter=@microservices/*",
    "format:common": "turbo run format --filter=@common/*",
    "format": "turbo run format",
    "test:mobile": "turbo run test --filter=mobile-app",
    "test:microservices": "turbo run test --filter=@microservices/*",
    "test:common": "turbo run test --filter=@common/*",
    "test": "turbo run test",
    "clean:mobile": "turbo run clean --filter=mobile-app",
    "clean:microservices": "turbo run clean --filter=@microservices/*",
    "clean:common": "turbo run clean --filter=@common/*",
    "clean": "turbo run clean && rm -rf **/.turbo/ node_modules/.cache/",
    "fclean:mobile": "turbo run fclean --filter=mobile-app",
    "fclean:microservices": "turbo run fclean --filter=@microservices/*",
    "fclean:common": "turbo run fclean --filter=@common/*",
    "fclean": "turbo run fclean && rm -rf **/.turbo/ node_modules/",
    "check-updates": "npm-check-updates -ws --root",
    "do-upgrades": "npm-check-updates -ws --root --upgrade"
  },
  "author": "The Fiesta Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.12.1",
    "fast-glob": "^3.2.12",
    "jest": "^29.5.0",
    "micromatch": "^4.0.5",
    "npm-check-updates": "^16.10.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3",
    "wait-on": "^7.0.1",
    "yargs": "^17.7.2"
  }
}
